{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": ["node"],
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowJs": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "charset": "utf8",
    "locale": "ru",
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "isolatedModules": true,
    "newLine": "LF",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "paths": {
      "components": ["/src/components"],
      "themes": ["/themes"],
      "styles": ["/src/styles"],
      "store": ["/src/store"]
    }
  },
  "plugins": [
    
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist", ".vscode", "docs"]
}